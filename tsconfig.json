{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "isolatedModules": true,
    "baseUrl": "./src",
    "skipLibCheck": true,
    "noEmit": false,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "resolveJsonModule": true,
    "paths": {
      "@config/*": ["config/*"],
      "@constants/*": ["constants/*"],
      "@enums/*": ["enums/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@modules/*": ["modules/*"],
      "@entities/*": ["models/entities/*"],
      "@types/*": ["models/types/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifiers": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
